<%- model_class = UploadFile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:filename) %>:</strong></dt>
  <dd><%= @upload_file.filename %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sales_date) %>:</strong></dt>
  <dd><%= @upload_file.sales_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              upload_files_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_upload_file_path(@upload_file), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              upload_file_path(@upload_file),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
