<%- model_class = Sale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:units) %>:</strong></dt>
  <dd><%= @sale.units %></dd>
  <dt><strong><%= model_class.human_attribute_name(:proceeds) %>:</strong></dt>
  <dd><%= @sale.proceeds %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_currency) %>:</strong></dt>
  <dd><%= @sale.customer_currency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country_id) %>:</strong></dt>
  <dd><%= @sale.country_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:currency_of_proceeds) %>:</strong></dt>
  <dd><%= @sale.currency_of_proceeds %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_price) %>:</strong></dt>
  <dd><%= @sale.customer_price %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sale_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sale_path(@sale), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sale_path(@sale),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
