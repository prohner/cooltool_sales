<%= form_for @sale, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :units, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :units, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :proceeds, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :proceeds, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :customer_currency, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :customer_currency, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :country_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :currency_of_proceeds, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :currency_of_proceeds, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :customer_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :customer_price, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sale_path, :class => 'btn' %>
  </div>
<% end %>
